<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <Page
    afterCancel="ClaimEvaluationForward.go(claim)"
    afterCommit="ClaimEvaluationForward.go(claim)"
    afterEnter="Evaluation.EvaluationTypeExt = &quot;settlement&quot;"
    canEdit="true"
    canVisit="perm.Claim.createevaluation(claim)"
    id="NewSettlementEvaluation"
    parent="Claim(claim)"
    startInEditMode="true"
    title="displaykey.Web.ClaimPlanOfAction.Evaluations.NewSettlementEvaluation">
    <LocationEntryPoint
      signature="NewSettlementEvaluation(claim:Claim)"/>
    <Variable
      name="claim"
      type="Claim"/>
    <Variable
      initialValue="claim.newEvaluation()"
      name="Evaluation"
      type="Evaluation"/>
    <Screen
      id="NewEvaluationScreen">
      <Toolbar/>
      <PanelRef
        def="NewSettlementEvaluationDV(Evaluation)">
        <Toolbar>
          <EditButtons
            cancelVisible="false"
            updateLabel="displaykey.Button.Update"/>
          <ToolbarButton
            action="Evaluation.SaveToECFExt = true; CurrentLocation.commit()"
            id="ToolbarButton_SaveToECF"
            label="displaykey.Button.UpdateSaveToECF"/>
          <EditButtons
            cancelLabel="displaykey.Button.Cancel"
            editVisible="false"
            updateVisible="false"/>
        </Toolbar>
      </PanelRef>
    </Screen>
  </Page>
</PCF>