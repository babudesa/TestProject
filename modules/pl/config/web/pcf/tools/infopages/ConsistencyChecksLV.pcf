<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <ListViewPanel
    id="ConsistencyChecksLV">
    <Require
      name="helper"
      type="gw.api.tools.ConsistencyChecksHelper"/>
    <Require
      name="tableSearch"
      type="String"/>
    <RowIterator
      editable="false"
      elementName="consistencyCheck"
      value="helper.getConsistencyChecks( tableSearch )">
      <ToolbarFilter
        name="CheckTypeFilterSet">
        <ToolbarFilterOptionGroup
          filters="new gw.api.filters.ConsistencyCheckTypelistFilterSet().FilterOptions"/>
      </ToolbarFilter>
      <Row>
        <Cell
          id="table"
          label="displaykey.Web.ConsistencyCheck.TableName"
          value="consistencyCheck.AssociatedTable.Name"
          valueVisible="true"/>
        <Cell
          id="Cell0"
          label="displaykey.Web.ConsistencyCheck.CheckName"
          value="consistencyCheck.ConsistencyCheckType.DisplayName"/>
        <Cell
          enableSort="false"
          id="consistencyCheckDescription"
          label="displaykey.Web.ConsistencyCheck.Desc"
          value="consistencyCheck.getDescription()"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>
