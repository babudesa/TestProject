<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <Page
    canEdit="true"
    canVisit="gw.api.tools.OracleAWRHelper.dbSupportsAWR()"
    countsAsWork="false"
    id="OracleAWRUnusedIndexesInfo"
    parent="InfoPages()"
    startInEditMode="true"
    title="displaykey.Web.InternalTools.InfoPages.OracleAWRUnusedIndexesInfo">
    <Variable
      initialValue="new gw.api.tools.OracleAWRHelper()"
      name="PageHelper"/>
    <Variable
      initialValue="true"
      name="Paging"
      type="Boolean"/>
    <Variable
      initialValue="false"
      name="IncludeInstrumentationTables"
      type="Boolean"/>
    <Variable
      initialValue="false"
      name="IncludeStagingTables"
      type="Boolean"/>
    <Variable
      initialValue="false"
      name="IncludeTempTables"
      type="Boolean"/>
    <Variable
      initialValue="false"
      name="IncludeTypelistTables"
      type="Boolean"/>
    <Screen
      id="OracleAWRInfoScreen">
      <DetailViewPanel>
        <InputColumn>
          <CheckBoxInput
            editable="true"
            id="IncludeInstrumentationTables"
            label="displaykey.Web.InternalTools.InfoPages.OracleAWR.IncludeInstrumentationTables"
            value="IncludeInstrumentationTables"
            visible="PageHelper.ReadyToDownload"/>
          <CheckBoxInput
            editable="true"
            id="IncludeStagingTables"
            label="displaykey.Web.InternalTools.InfoPages.OracleAWR.IncludeStagingTables"
            value="IncludeStagingTables"
            visible="PageHelper.ReadyToDownload"/>
          <CheckBoxInput
            editable="true"
            id="IncludeTempTables"
            label="displaykey.Web.InternalTools.InfoPages.OracleAWR.IncludeTempTables"
            value="IncludeTempTables"
            visible="PageHelper.ReadyToDownload"/>
          <CheckBoxInput
            editable="true"
            id="IncludeTypelistTables"
            label="displaykey.Web.InternalTools.InfoPages.OracleAWR.IncludeTypelistTables"
            value="IncludeTypelistTables"
            visible="PageHelper.ReadyToDownload"/>
        </InputColumn>
        <InputColumn>
          <ButtonInput
            action="PageHelper.downloadAWRUnusedIndexInfo(IncludeInstrumentationTables, IncludeStagingTables, IncludeTempTables, IncludeTypelistTables)"
            available="PageHelper.ReadyToDownload"
            download="true"
            id="download"
            value="displaykey.Button.Download"/>
        </InputColumn>
        <InputColumn>
          <ButtonInput
            action="PageHelper.loadAWRInfo()"
            id="refresh"
            value="displaykey.Button.Refresh"/>
        </InputColumn>
        <InputColumn>
          <ButtonInput
            action="Paging = !Paging"
            id="TogglePaging"
            value="Paging ? displaykey.Web.InternalTools.InfoPages.DisablePaging : displaykey.Web.InternalTools.InfoPages.EnablePaging"/>
        </InputColumn>
      </DetailViewPanel>
      <PanelRef
        def="OracleAWRLV(PageHelper)"
        mode="Paging ? &quot;paging&quot; : &quot;nopaging&quot;">
        <TitleBar
          appendListViewPaging="true"
          title="displaykey.Web.InternalTools.InfoPages.OracleAWR.Instructions"/>
        <Toolbar
          id="orasptb"/>
      </PanelRef>
    </Screen>
  </Page>
</PCF>
