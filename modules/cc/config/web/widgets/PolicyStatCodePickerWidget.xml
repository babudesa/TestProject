<WidgetTemplate name="PolicyStatCodePickerTemplate" inputWidgetName="PolicyStatCodePickerInput">

  <TemplateAttribute name="pickerIcon" default="&quot;search.gif&quot;" type="xsd:string" />
  <TemplateAttribute name="pickerIconTooltip" default="displaykey.Button.Search" type="xsd:string" />

  <ExpressionRangeValue>
    <MenuItem id="#{id}_PickerButton" icon="#{pickerIcon}"
                 action="#{action}"
                 hideIfReadOnly="true"
                 label="#{pickerIconTooltip}"/>
  </ExpressionRangeValue>
  
</WidgetTemplate>
