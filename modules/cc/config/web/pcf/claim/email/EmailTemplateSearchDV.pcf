<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <DetailViewPanel
    id="EmailTemplateSearchDV">
    <Require
      name="EmailTemplateSearchCriteria"
      type="gw.api.email.EmailTemplateSearchCriteria"/>
    <InputColumn>
      <Input
        editable="true"
        id="Topic"
        label="displaykey.Web.EmailTemplateSearchDV.Topic"
        value="EmailTemplateSearchCriteria.Topic"/>
      <Input
        editable="true"
        id="Language"
        label="displaykey.Web.EmailTemplateSearchDV.Language"
        value="EmailTemplateSearchCriteria.Language"
        visible="LanguageType.getTypeKeys( false ).Count &gt; 1"/>
      <Input
        editable="true"
        id="Keywords"
        label="displaykey.Web.EmailTemplateSearchDV.Keywords"
        value="EmailTemplateSearchCriteria.Keywords"/>
    </InputColumn>
    <InputFooterSection>
      <InputSetRef
        def="SearchAndResetInputSet()"/>
    </InputFooterSection>
  </DetailViewPanel>
</PCF>
