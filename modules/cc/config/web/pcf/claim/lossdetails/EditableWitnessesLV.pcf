<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <ListViewPanel
    id="EditableWitnessesLV">
    <Require
      name="ClaimContactRoleList"
      type="ClaimContactRole[]"/>
    <Require
      name="ClaimContactRoleOwner"
      type="contact.ClaimContactRoleOwner"/>
    <Require
      name="role"
      type="ContactRole"/>
    <RowIterator
      editable="true"
      elementName="ClaimContactRole"
      hideCheckBoxesIfReadOnly="true"
      pageSize="3"
      toCreateAndAdd="ClaimContactRoleOwner.addEmptyRole(role)"
      toRemove="ClaimContactRoleOwner.removeRole(ClaimContactRole)"
      value="ClaimContactRoleList">
      <Row>
        <ClaimContactCell
          claim="ClaimContactRoleOwner.getClaim()"
          editable="true"
          forceContactSubtype="ClaimContactRoleOwner.getContactType(role)"
          id="Contact"
          label="displaykey.LV.Policy.EditableExcludedParties.Contact"
          required="true"
          sortValueRange="false"
          value="ClaimContactRole.Contact"
          valueRange="ClaimContactRoleOwner.getClaim().getRelatedContacts(ClaimContactRoleOwner.getContactType(role))"/>
        <Cell
          editable="true"
          id="EditableWitnesses_WitnessStatementInd"
          label="displaykey.LV.Claim.EditableWitnesses.WitnessStatementInd"
          required="true"
          value="ClaimContactRole.WitnessStatementInd"/>
        <Cell
          editable="true"
          id="EditableWitnesses_WitnessPosition"
          label="displaykey.LV.Claim.EditableWitnesses.WitnessPosition"
          required="false"
          value="ClaimContactRole.WitnessPosition"/>
        <Cell
          editable="true"
          id="EditableWitnesses_WitnessPerspective"
          label="displaykey.LV.Claim.EditableWitnesses.WitnessPerspective"
          required="true"
          value="ClaimContactRole.WitnessPerspective"
          width="40%"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>
