<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <Popup
    canEdit="true"
    canVisit="perm.Contact.createlocal"
    id="NewContactPopup"
    returnType="Contact"
    startInEditMode="true"
    title="displaykey.Web.Contact.Title.New(contactSubtype.DisplayName)">
    <LocationEntryPoint
      signature="NewContactPopup(contactSubtype : typekey.Contact, parentContact : Contact, claim : Claim)"/>
    <Variable
      name="contactSubtype"
      type="typekey.Contact"/>
    <Variable
      name="parentContact"
      type="Contact"/>
    <Variable
      name="claim"
      type="Claim"/>
    <Variable
      initialValue="new contact.LocationContactHandle(gw.api.contact.NewContactUtil.newContactFromSubtype(contactSubtype))"
      name="contactHandle"/>
    <Variable
      initialValue="Contact.generateLinkStatus()"
      name="linkStatus"
      recalculateOnRefresh="true"/>
    <Variable
      initialValue="(linkStatus != null and linkStatus.Known and linkStatus.Linked) ? true : false"
      name="showRelatedObjects"
      recalculateOnRefresh="true"
      type="boolean"/>
    <ScreenRef
      def="ContactDetailScreen(contactHandle, true, false, linkStatus, claim, true, showRelatedObjects)"/>
    <Code><![CDATA[
property get Contact() : Contact { return contactHandle.Contact; }
    ]]></Code>
  </Popup>
</PCF>
