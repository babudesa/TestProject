<?xml version="1.0"?>
<viewEntity
  xmlns="http://guidewire.com/datamodel"
  desc="Abstract base view entity for efficiently displaying Exposures in list views."
  entity="ExposureAbstractView"
  exportable="false"
  final="false"
  javaClass="com.guidewire.cc.domain.exposure.ExposureAbstractView"
  primaryEntity="Exposure">
  <viewEntityColumn
    name="ClaimNumber"
    path="Claim.ClaimNumber"/>
  <viewEntityColumn
    name="ClaimOrder"
    path="ClaimOrder"/>
  <computedcolumn
    expression="${1} + ${2} - ${3}"
    name="TotalIncurredNet"
    paths="ExposureRpt.OpenReserves, ExposureRpt.TotalPayments, ExposureRpt.TotalRecoveries"/>
  <viewEntityTypekey
    name="ExposureType"
    path="ExposureType"/>
  <viewEntityTypekey
    name="PrimaryCoverage"
    path="PrimaryCoverage"/>
  <viewEntityTypekey
    name="State"
    path="State"/>
  <viewEntityLink
    name="ExposureClaimant"
    path="ClaimantDenorm"/>
  <!-- Required for "ExposureClaimant" column -->
  <viewEntityName
    name="ExposureClaimantName"
    path="ClaimantDenorm"/>
  <viewEntityName
    name="ClaimClaimantName"
    path="Claim.ClaimantDenorm"/>
  <viewEntityTypekey
    name="ClaimCurrency"
    path="Claim.Currency"/>
</viewEntity>
