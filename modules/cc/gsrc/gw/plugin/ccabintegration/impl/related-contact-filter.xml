<?xml version="1.0" encoding="UTF-8"?>
<ObjectFilter
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.guidewire.com/gwservice/addressbook/object-filter.xsd">

    <FieldFilter entity="ABContact">
        <Field>Subtype</Field>
        <Field>LinkID</Field> <!-- This is the name of the 'AddressBookUID' within ContactCenter-->
    </FieldFilter>

    <FieldFilter entity="ABPerson">
        <Field>FirstName</Field>
        <Field>LastName</Field>
        <Field>Suffix</Field>
        <Field>LinkID</Field> <!-- This is the name of the 'AddressBookUID' within ContactCenter-->
    </FieldFilter>

    <FieldFilter entity="ABCompany">
        <Field>Name</Field>
        <Field>LinkID</Field> <!-- This is the name of the 'AddressBookUID' within ContactCenter-->
    </FieldFilter>

    <FieldFilter entity="ABPlace">
        <Field>Name</Field>
        <Field>LinkID</Field> <!-- This is the name of the 'AddressBookUID' within ContactCenter-->
    </FieldFilter>

</ObjectFilter>
